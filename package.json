{
  "name": "asciicraft",
  "version": "1.0.0",
  "description": "A web application that transforms text into ASCII art",
  "main": "dist/server/server.js",
  "scripts": {
    "build:css": "postcss src/styles/tailwind.css -o public/styles/tailwind.css",
    "build:client": "webpack --mode production",
    "build:server": "tsc",
    "copy:views": "cp -R src/views dist/views",
    "build": "npm run build:css && npm run build:client && npm run build:server && npm run copy:views",
    "start": "node dist/server/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/waylake/asciicraft.git"
  },
  "keywords": [
    "ascii",
    "art",
    "text",
    "generator",
    "react",
    "express",
    "ssr"
  ],
  "author": "waylake <waylake2003@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/waylake/asciicraft/issues"
  },
  "homepage": "https://github.com/waylake/asciicraft#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "@types/figlet": "^1.5.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^27.0.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "css-loader": "^7.1.2",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "figlet": "^1.7.0",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.41",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^8.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0",
    "react-toastify": "^10.0.5",
    "tailwindcss": "^3.4.9",
    "ts-loader": "^9.5.1",
    "ts-node-dev": "^2.0.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
